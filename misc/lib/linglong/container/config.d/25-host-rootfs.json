{
    "ociVersion": "1.0.1",
    "patch": [
        {
            "op": "add",
            "path": "/mounts/-",
            "value": {
                "destination": "/run/host",
                "type": "tmpfs",
                "source": "tmpfs",
                "options": ["nodev", "nosuid", "mode=700"]
            }
        },
        {
            "op": "add",
            "path": "/mounts/-",
            "value": {
                "destination": "/run/host/rootfs",
                "type": "bind",
                "source": "/",
                "options": ["rbind"]
            }
        }
    ]
}
