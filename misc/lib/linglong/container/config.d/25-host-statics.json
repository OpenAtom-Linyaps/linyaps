{
    "ociVersion": "1.0.1",
    "patch": [
        {
            "op": "add",
            "path": "/mounts/-",
            "value": {
                "destination": "/usr/share/fonts",
                "type": "bind",
                "source": "/usr/share/fonts",
                "options": [
                    "rbind",
                    "ro"
                ]
            }
        },
        {
            "op": "add",
            "path": "/mounts/-",
            "value": {
                "destination": "/usr/share/icons",
                "type": "bind",
                "source": "/usr/share/icons",
                "options": [
                    "rbind",
                    "ro"
                ]
